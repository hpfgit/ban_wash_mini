/* page/repairBegin/repairBegin.wxss */

page {
    background-color: #eef1f4;
}

/*提示  */

.prompt {
    width: 100%;
    height: 84rpx;
    background-color: #fff;
    margin-top: 2rpx;
    display: flex;
    align-items: center;
}

.prompt image {
    width: 34rpx;
    height: 39rpx;
    margin-left: 21rpx;
    margin-right: 10rpx;
    margin-top: -4rpx;
}

.prompt text {
    font-size: 26rpx;
    color: #282828;
}

/*添加图片  */

.imgs {
    width: 100%;
    background-color: #fff;
    padding: 0 24rpx;
    box-sizing: border-box;
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    margin-top: 2rpx;
}

.imgs .img-item {
    width: 210rpx;
    height: 210rpx;
    margin-top: 29rpx;
    margin-bottom: 29rpx;
}

.imgs .img-item .default {
    width: 100%;
    height: 100%;
    box-shadow: 0px 3px 14px 0px rgba(98, 126, 167, 0.2);
    border-radius: 8px;
}

.imgs .img-item .default image {
    width: 100%;
    height: 100%;
}

.imgs .img-item .pic {
    width: 100%;
    height: 100%;
    border-radius: 8px;
}

.imgs .img-item .pic image {
    width: 100%;
    height: 100%;
    border-radius: 8px;
}

/*选填  */

.selection {
    width: 100%;
    background-color: #fff;
    margin-top: 18rpx;
}

.selection .selection-title {
    width: 100%;
    height: 84rpx;
    display: flex;
    align-items: center;
    padding: 0 24rpx;
    box-sizing: border-box;
}

.selection .selection-title image {
    width: 32rpx;
    height: 32rpx;
    vertical-align: middle;
    margin-right: 11rpx;
}

.selection .selection-title text {
    font-size: 26rpx;
    color: #282828;
}

.selection .selection-title text text {
    font-size: 22rpx;
}

.selection .selection-C {
    width: 100%;
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    padding: 9rpx 24rpx 30rpx;
    box-sizing: border-box;
    border-top: 2rpx solid #eef1f4;
}

