/* pages/payShare/payShare.wxss */

page {
    width: 100%;
    height: 100%;
    background-color: #eef1f4;
}

.page {
    padding-bottom: 20rpx;
}

.hidden {
    height: 100%;
    overflow-y: hidden;
}

/*banner背景图  */

.banner {
    width: 100%;
    height: 342rpx;
}

.banner image {
    width: 100%;
    height: 100%;
}

/*状态  */

.state {
    width: 602rpx;
    height: 294rpx;
    margin: -254rpx auto 0;
    position: relative;
}

.state .bg {
    width: 100%;
    height: 100%;
}

.state .state-red {
    width: 108rpx;
    height: 45rpx;
    position: absolute;
    top: 0;
    left: 40rpx;
}

.state .rocket {
    width: 210rpx;
    height: 224rpx;
    position: absolute;
    top: -48rpx;
    right: 11rpx;
}

.state .goods-img {
    width: 100%;
    text-align: center;
    position: absolute;
    top: 34rpx;
    left: 0;
}

.state .goods-img image {
    width: 90rpx;
    height: 90rpx;
}

.state .service {
    width: 100%;
    display: flex;
    justify-content: center;
    position: absolute;
    top: 154rpx;
    left: 0;
}

.state .service .item {
    font-size: 22rpx;
    color: #5e95f4;
    padding: 3rpx 7rpx;
    border: 1rpx solid #5e95f4;
    margin-right: 10rpx;
    border-radius: 6rpx;
}

.state .service .item:last-child {
    margin-right: 0;
}

.state .text {
    width: 590rpx;
    height: 75rpx;
    text-align: center;
    line-height: 75rpx;
    font-size: 24rpx;
    color: #4b525b;
    border-top: 2rpx dashed #e1e1e1;
    position: absolute;
    left: 7rpx;
    top: 218rpx;
}

/*会员级别  */

.level {
    width: 702rpx;
    margin: 20rpx auto 0;
    background-color: #fff;
    padding: 30rpx 24rpx;
    box-sizing: border-box;
    border-radius: 16rpx;
}

.level .now-level {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0 16rpx;
    box-sizing: border-box;
}

.level .now-level .left {
    display: flex;
    align-items: center;
}

.level .now-level .left image {
    width: 40rpx;
    height: 40rpx;
    margin-right: 7rpx;
}

.level .now-level .left text:nth-child(1) {
    font-size: 26rpx;
    color: #4b525b;
}

.level .now-level .left text:nth-child(3) {
    font-size: 24rpx;
    color: #90a2b2;
}

.level .now-level .right {
    font-size: 28rpx;
    font-weight: 600;
    color: #5e95f4;
}

/*等级条  */

.levelBg {
    padding: 9rpx 15rpx;
    background-color: #5e95f4;
    color: #fff !important;
    position: relative;
}

.level .strip {
    margin-top: 19rpx;
}

.level .strip .level-name {
    width: 100%;
    height: 50rpx;
    display: flex;
    justify-content: space-between;
}

.level .strip .level-name .item {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    font-size: 24rpx;
    color: #666;
}

.level .strip .level-name .item image {
    width: 16rpx;
    height: 14rpx;
    position: absolute;
    top: 0;
    left: 50%;
    margin-left: -8rpx;
}

.level .strip .progress {
    margin-top: 15rpx;
    padding: 0 16rpx;
    box-sizing: border-box;
}

.level .strip .progress .floor {
    width: 100%;
    height: 16rpx;
    background-color: #eef1f4;
    border-radius: 30rpx;
    position: relative;
}

.level .strip .progress .floor .size {
    /* width: 50rpx; */
    height: 16rpx;
    background-image: linear-gradient(50deg, #fff, #5e94f5);
    border-radius: 30rpx;
    position: absolute;
    left: 0;
    top: 0;
    z-index: 9;
}

.level .strip .prompt {
    font-size: 24rpx;
    line-height: 24rpx;
    color: #666;
    margin-top: 30rpx;
    padding: 0 16rpx;
    box-sizing: border-box;
}

/*横线  */

.level .line {
    width: 622rpx;
    height: 2rpx;
    background-color: #f0f0f0;
    margin: 32rpx auto 0;
}

/*立即帮他升级  */

.upgrade {
    width: 584rpx;
    height: 82rpx;
    text-align: center;
    line-height: 73rpx;
    position: relative;
    margin: 40rpx auto 0;
}

.upgrade image {
    width: 100%;
    height: 100%;
    position: absolute;
    left: 0;
    top: 0;
}

.upgrade text {
    font-size: 28rpx;
    color: #fefefe;
    position: relative;
    z-index: 9;
}

/* 帮他找更多人加速 */

.morePeople {
    width: 575rpx;
    height: 76rpx;
    text-align: center;
    line-height: 76rpx;
    margin: 40rpx auto 0;
    font-size: 28rpx;
    color: #5e94f5;
    border: 1rpx solid #5e94f5;
    border-radius: 50rpx;
}

/* 开始洗护 */

.beginClean {
    width: 584rpx;
    height: 82rpx;
    text-align: center;
    line-height: 73rpx;
    position: relative;
    margin: 40rpx auto 0;
}

.beginClean image {
    width: 100%;
    height: 100%;
    position: absolute;
    left: 0;
    top: 0;
}

.beginClean text {
    font-size: 28rpx;
    color: #fefefe;
    position: relative;
    z-index: 9;
}

/*宣传图  */

.xuanchuan {
    width: 100%;
    height: 250rpx;
    margin-top: 20rpx;
}

.xuanchuan image {
    width: 100%;
    height: 100%;
}

/*如何使用BAN小程序  */

.use {
    width: 702rpx;
    background-color: #fff;
    border-radius: 16rpx;
    margin: 20rpx auto 0;
    padding: 40rpx 46rpx;
    box-sizing: border-box;
}

.use .title {
    font-size: 24rpx;
    color: #282828;
}

.use .item .top {
    font-size: 22rpx;
    color: #282828;
    margin-top: 49rpx;
    display: flex;
    align-items: center;
}

.use .item .top view {
    display: flex;
    align-items: center;
}

.use .item .top .italic {
    font-style: italic;
    font-weight: 600;
}

.use .item .top image {
    width: 36rpx;
    height: 34rpx;
    margin: 0 10rpx;
}

.use .item .top .spot {
    display: inline-block;
    width: 12rpx;
    height: 12rpx;
    background-color: #5e95f4;
    border-radius: 4rpx;
    margin-right: 24rpx;
}

.use .item .bottom {
    width: 100%;
    height: 320rpx;
    margin-top: 40rpx;
}

.use .item .bottom image {
    width: 100%;
    height: 100%;
}

/*抽奖  */

.animation {
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.4);
    position: fixed;
    left: 0;
    top: 0;
    z-index: 10;
}

.animation .box {
    width: 570rpx;
    height: 588rpx;
    background-color: #fff;
    position: absolute;
    top: 50%;
    left: 50%;
    margin-top: -294rpx;
    margin-left: -285rpx;
    border-radius: 16rpx;
}

.animation .box .rocket {
    width: 570rpx;
    height: 205rpx;
    position: absolute;
    left: 0;
    top: -63rpx;
}

.animation .box .title {
    text-align: center;
    font-size: 24rpx;
    color: #282828;
    margin-top: 191rpx;
}

.animation .box .content {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    margin-top: 12rpx;
}

.animation .box .content .item {
    width: 120rpx;
    height: 120rpx;
    border: 9rpx solid #efeafd;
    background-color: #5e95f4;
    color: #fff;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    margin-right: 18rpx;
    margin-top: 18rpx;
}

.active {
    width: 120rpx;
    height: 120rpx;
    border: 9rpx solid #9ec0ff !important;
    background-color: #fff !important;
    color: #282828 !important;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    margin-right: 18rpx;
    margin-top: 18rpx;
    font-size: 26rpx;
}

.animation .box .content .item:nth-child(3n) {
    margin-right: 0;
}

.animation .box .content .item .top text:first-child {
    font-size: 40rpx;
    font-weight: 600;
}

.animation .box .content .item .top text:last-child {
    font-size: 26rpx;
}

.animation .box .content .item .bottom {
    font-size: 24rpx;
}

/*分享翻倍  */

.doubling {
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.4);
    position: fixed;
    left: 0;
    top: 0;
    z-index: 10;
}

.doubling .box {
    width: 570rpx;
    height: 666rpx;
    background-color: #fff;
    position: absolute;
    top: 50%;
    left: 50%;
    margin-top: -333rpx;
    margin-left: -288rpx;
    border-radius: 16rpx;
}

.doubling .box .rocket {
    width: 570rpx;
    height: 205rpx;
    position: absolute;
    left: 0;
    top: -63rpx;
}

.doubling .box .text1 {
    font-size: 24rpx;
    line-height: 24rpx;
    text-align: center;
    color: #858585;
    margin-top: 171rpx;
}

.doubling .box .text1 text:nth-child(2) {
    margin: 0 10rpx;
}

.doubling .box .text2 {
    text-align: center;
    font-size: 26rpx;
    line-height: 26rpx;
    color: #282828;
    margin-top: 30rpx;
}

.doubling .box .voucher {
    width: 100%;
    margin-top: 35rpx;
    display: flex;
    justify-content: center;
}

.doubling .box .voucher .left {
    width: 169rpx;
    height: 133rpx;
    color: #fff;
    position: relative;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.doubling .box .voucher .left image {
    width: 100%;
    height: 100%;
    position: absolute;
    left: 0;
    top: 0;
}

.doubling .box .voucher .left .top {
    position: relative;
    z-index: 9;
}

.doubling .box .voucher .left .top text:first-child {
    font-size: 24rpx;
}

.doubling .box .voucher .left .top text:last-child {
    font-size: 40rpx;
}

.doubling .box .voucher .left .bottom {
    position: relative;
    z-index: 9;
    font-size: 22rpx;
}

.doubling .box .voucher .right {
    width: 322rpx;
    height: 133rpx;
    border: 1rpx solid #f66b63;
    border-left: none;
    padding: 0 20rpx;
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
    align-content: space-around;
}

.doubling .box .voucher .right .top {
    height: 70rpx;
    display: flex;
    align-items: center;
    border-bottom: 1rpx solid #eef1f4;
}

.doubling .box .voucher .right .top image {
    width: 70rpx;
    height: 26rpx;
    margin-right: 14rpx;
}

.doubling .box .voucher .right .top text {
    font-size: 24rpx;
    color: #666;
}

.doubling .box .voucher .right .bottom {
    height: 55rpx;
    line-height: 55rpx;
    font-size: 22rpx;
    color: #aaa;
}

/*分享翻倍  */

.doubling .box .share {
    width: 492rpx;
    height: 78rpx;
    text-align: center;
    line-height: 68rpx;
    position: relative;
    margin: 40rpx auto 0;
}

.doubling .box .share image {
    width: 100%;
    height: 100%;
    position: absolute;
    left: 0;
    top: 0;
}

.doubling .box .share text {
    position: relative;
    z-index: 9;
    font-size: 28rpx;
    color: #fff;
}

.doubling .box .next {
    width: 490rpx;
    height: 76rpx;
    text-align: center;
    line-height: 76rpx;
    border: 1rpx solid #5e95f4;
    border-radius: 38rpx;
    color: #5e95f4;
    font-size: 28rpx;
    margin: 18rpx auto 0;
}

