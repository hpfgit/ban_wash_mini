/* page/specialOrder/specialOrder.wxss */

page {
    background-color: #eef1f4;
}

/*上传图片  */

.uploadLeft {
    width: 100%;
    background-color: #fff;
    border-top: 1rpx solid #eef1f4;
    padding: 22rpx 24rpx;
    box-sizing: border-box;
    display: flex;
    justify-content: space-between;
}

.uploadLeft .img {
    width: 126rpx;
    height: 126rpx;
}

.uploadLeft .img image {
    width: 126rpx;
    height: 126rpx;
    border-radius: 6rpx;
}

.uploadLeft .right {
    margin-left: 30rpx;
}

.uploadLeft .right .right-top {
    font-size: 28rpx;
    line-height: 30rpx;
    color: #282828;
    margin-top: 8rpx;
}

.uploadLeft .right .right-bottom {
    font-size: 24rpx;
    color: #aaabad;
    margin-top: 18rpx;
}

/*选择服务项目  */

.checkbox {
    width: 100%;
    background-color: #fff;
    margin-top: 18rpx;
}

.checkbox .title {
    width: 100%;
    height: 84rpx;
    line-height: 84rpx;
    padding: 0 24rpx;
    box-sizing: border-box;
    font-size: 26rpx;
    color: #282828;
    border-bottom: 1rpx solid #eef1f4;
}

.checkbox .title text {
    font-size: 22rpx;
}

.checkbox .items {
    width: 100%;
    padding: 0 24rpx 51rpx;
    box-sizing: border-box;
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
}

.checkbox .items .item {
    display: inline-block;
    font-size: 24rpx;
    color: #282828;
    padding: 21rpx 31rpx;
    box-sizing: border-box;
    background-color: #f6f5fa;
    border-radius: 31rpx;
    margin-top: 30rpx;
    margin-right: 25rpx;
}

.checkbox .items .item:nth-child(4n) {
    margin-right: 0rpx;
}

.checkbox .items .item:nth-child(1) {
    padding: 21rpx 54rpx;
    box-sizing: border-box;
}

.checkbox .items .item:nth-child(4) {
    padding: 21rpx 54rpx;
    box-sizing: border-box;
}

.checkbox .items .item:nth-child(9) {
    padding: 21rpx 18rpx;
    box-sizing: border-box;
}

.acvite {
    background-color: #e7f3ff !important;
    color: #5e95f4 !important;
}

/*自助下单流程  */

.flow {
    width: 100%;
    background-color: #fff;
    margin-top: 18rpx;
}

.flow .top {
    width: 210rpx;
    height: 47rpx;
    margin: 0 auto;
    position: relative;
}

.flow .top image {
    width: 100%;
    height: 100%;
}

.flow .top text {
    font-size: 26rpx;
    color: #fff;
    position: absolute;
    top: 50%;
    left: 50%;
    margin-left: -78rpx;
    margin-top: -17rpx;
}

.flow .content {
    text-align: center;
    padding: 40rpx 26rpx;
    box-sizing: border-box;
    font-size: 26rpx;
    color: #282828;
    line-height: 40rpx;
}

.flow .content image {
    width: 20rpx;
    height: 12rpx;
    margin-left: 23rpx;
    margin-right: 12rpx;
    vertical-align: middle;
    margin-top: -4rpx;
}

/*备注  */

.remarks {
    width: 100%;
    margin-top: 18rpx;
    background-color: #fff;
}

.remarks .remarks-title {
    width: 100%;
    height: 84rpx;
    font-size: 26rpx;
    color: #282828;
    font-weight: 600;
    padding: 0 24rpx;
    box-sizing: border-box;
    position: relative;
    display: flex;
    align-items: center;
}

.remarks .remarks-title .fanli {
    width: 90rpx;
    height: 66rpx;
    position: absolute;
    right: 24rpx;
    top: 0;
}

.remarks .remarks-title .fanli image {
    width: 100%;
    height: 100%;
}

.remarks .remarks-title .fanli text {
    font-size: 26rpx;
    font-weight: 400;
    color: #fff;
    position: absolute;
    top: 50%;
    left: 50%;
    margin-left: -26rpx;
    margin-top: -17rpx;
}

/*textatea  */

.remarks .text {
    width: 100%;
    border-top: 1rpx solid #eef1f4;
    padding: 28rpx 24rpx;
    box-sizing: border-box;
}

.remarks .text .areas {
    width: 100%;
    min-height: 170rpx;
    padding-bottom: 40rpx;
    font-size: 26rpx;
    border-bottom: 1rpx solid #eef1f4;
    position: relative;
}

.remarks .text .areas text {
    color: #858585;
    position: absolute;
    right: 0;
    bottom: 0;
}

.remarks .upload {
    width: 100%;
    padding: 0 24rpx;
    box-sizing: border-box;
}

.remarks .upload .handle {
    width: 100%;
    margin-top: 32rpx;
    padding-bottom: 30rpx;
    box-sizing: border-box;
}

.remarks .upload .handle image {
    margin-right: 40rpx;
}

.remarks .upload .handle image:nth-child(1) {
    width: 28rpx;
    height: 40rpx;
}

.remarks .upload .handle image:nth-child(2) {
    width: 38rpx;
    height: 34rpx;
}

.remarks .upload .handle image:nth-child(3) {
    width: 36rpx;
    height: 34rpx;
}

/*上传部分  */

.remarks .upload .display {
    width: 100%;
    display: flex;
    flex-wrap: wrap;
}

/*语音  */

.remarks .upload .display .voice {
    display: flex;
    flex-wrap: wrap;
}

.remarks .upload .display .voice .voice-item {
    width: 126rpx;
    height: 126rpx;
    position: relative;
    margin-right: 22rpx;
    margin-bottom: 22rpx;
}

.remarks .upload .display .voice .voice-item .voiceBox {
    width: 100%;
    height: 100%;
}

.remarks .upload .display .voice .voice-item .bofang {
    width: 100%;
    height: 100%;
    text-align: center;
    line-height: 126rpx;
    font-size: 50rpx;
    color: #fff;
    position: absolute;
    left: 0;
    top: 0;
}

.remarks .upload .display .voice .voice-item .zanting {
    width: 100%;
    height: 100%;
    text-align: center;
    line-height: 126rpx;
    font-size: 50rpx;
    color: #fff;
    position: absolute;
    left: 0;
    top: 0;
}

.remarks .upload .display .voice .voice-item .delete {
    width: 40rpx;
    height: 40rpx;
    text-align: center;
    line-height: 40rpx;
    font-size: 17rpx;
    color: #fff;
    border-radius: 50%;
    background-color: #5e94f5;
    position: absolute;
    right: -15rpx;
    top: -15rpx;
}

/*图片  */

.remarks .upload .display .pic {
    display: flex;
    flex-wrap: wrap;
}

.remarks .upload .display .pic .pic-item {
    width: 126rpx;
    height: 126rpx;
    position: relative;
    margin-right: 22rpx;
    margin-bottom: 22rpx;
}

.remarks .upload .display .pic .pic-item image {
    width: 100%;
    height: 100%;
}

.remarks .upload .display .pic .pic-item text {
    width: 40rpx;
    height: 40rpx;
    text-align: center;
    line-height: 40rpx;
    font-size: 17rpx;
    color: #fff;
    border-radius: 50%;
    background-color: #5e94f5;
    position: absolute;
    right: -15rpx;
    top: -15rpx;
}

/*视频  */

.remarks .upload .display .video {
    display: flex;
    flex-wrap: wrap;
}

.remarks .upload .display .video .video-item {
    width: 126rpx;
    height: 126rpx;
    position: relative;
    margin-right: 22rpx;
    margin-bottom: 22rpx;
}

.remarks .upload .display .video .video-item video {
    width: 100%;
    height: 100%;
}

.remarks .upload .display .video .video-item cover-view {
    width: 40rpx;
    height: 40rpx;
    text-align: center;
    line-height: 40rpx;
    font-size: 17rpx;
    color: #fff;
    border-radius: 50%;
    background-color: #5e94f5;
    position: absolute;
    right: -15rpx;
    top: -15rpx;
    z-index: 9999;
}

/*提交订单  */

.submit {
    width: 630rpx;
    height: 80rpx;
    position: relative;
    margin: 21rpx auto 0;
}

.submit image {
    width: 100%;
    height: 100%;
}

.submit text {
    font-size: 28rpx;
    color: #fff;
    position: absolute;
    left: 50%;
    top: 50%;
    margin-left: -148rpx;
    margin-top: -21rpx;
}

.yuyin-gif {
    width: 200rpx;
    height: 200rpx;
    position: fixed;
    left: 50%;
    top: 50%;
    margin-left: -100rpx;
    margin-top: -200rpx;
}
