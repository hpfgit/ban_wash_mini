/* page/repairSubmit/repairSubmit.wxss */

page {
    background-color: #eef1f4;
}

.main {
    background-color: #fff;
    width: 100%;
    padding: 0 34rpx;
    box-sizing: border-box;
}

.main .main-info {
    width: 100%;
    text-align: center;
    color: #282828;
    font-size: 32rpx;
    line-height: 48rpx;
    border-bottom: 1rpx solid #eef1f4;
    padding-top: 51rpx;
    padding-bottom: 59rpx;
    box-sizing: border-box;
}

.main .main-info .icon {
    width: 100rpx;
    height: 100rpx;
    margin: 0 auto 30rpx;
}

.main .main-info .icon image {
    width: 100%;
    height: 100%;
}

.main .main-info text {
    color: #5e95f4;
}

.main .flow {
    width: 100%;
    text-align: center;
}

.main .flow .flow-icon {
    width: 210rpx;
    height: 48rpx;
    margin: 0 auto;
    position: relative;
}

.main .flow .flow-icon image {
    width: 100%;
    height: 100%;
}

.main .flow .flow-icon text {
    font-size: 26rpx;
    color: #fff;
    position: absolute;
    top: 50%;
    left: 50%;
    margin-left: -78rpx;
    margin-top: -17rpx;
}

.main .flow .content {
    font-size: 26rpx;
    color: #282828;
    padding: 40rpx 0;
    box-sizing: border-box;
}

/*您还可以进行以下操作  */

.more {
    margin-top: 39rpx;
    padding: 0 24rpx;
    box-sizing: border-box;
}

.more .title {
    font-size: 26rpx;
    color: #939393;
}

.more .more-C {
    width: 100%;
    background-color: #fff;
    margin-top: 24rpx;
    border-radius: 8rpx;
    box-shadow: 0px 2px 10px 0px rgba(29, 53, 94, 0.14);
}

.more .more-C .default {
    padding: 34rpx 30rpx;
    box-sizing: border-box;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.more .more-C .default .left .left-title {
    font-size: 28rpx;
    color: #5e95f4;
}

.more .more-C .default .left .left-content {
    font-size: 24rpx;
    line-height: 36rpx;
    color: #939393;
    margin-top: 16rpx;
}

.more .more-C .see {
    border-bottom: 1rpx solid #eef1f4;
}

.more .more-C .see .right {
    width: 18rpx;
    height: 32rpx;
    margin-left: 75rpx;
}

.more .more-C .see .right image {
    width: 100%;
    height: 100%;
}

.more .more-C .public .right {
    width: 170rpx;
    height: 70rpx;
    text-align: center;
    font-size: 22rpx;
    line-height: 34rpx;
    color: #5e95f4;
    border: 1rpx solid #5e95f4;
    border-radius: 10rpx;
    margin-left: 28rpx;
}
