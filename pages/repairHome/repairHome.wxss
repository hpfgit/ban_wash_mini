page {
    width: 100%;
    height: 100%;
    background-color: #eef1f4;
}

.hidden {
    height: 100%;
    overflow-y: hidden;
}

/*banner图  */

.page {
    width: 100%;
    height: 100%;
    padding-bottom: 126rpx;
}

.banner {
    width: 100%;
    height: 340rpx;
    position: relative;
}

.banner .bannerBg {
    width: 100%;
    height: 100%;
}
.banner .swiper_box image {
  width: 100%;
  height: 100%;
}
.banner button {
    width: 66rpx;
    height: 66rpx;
    position: absolute;
    top: 24rpx;
    right: 24rpx;
}

.banner .kefu {
    width: 66rpx;
