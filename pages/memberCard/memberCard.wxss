page {
    background-color: #eef1f4;
}

/*banner部分  */

.banner {
    width: 100%;
    height: 250rpx;
    position: relative;
}

.banner .bg {
    width: 100%;
    height: 100%;
}

.banner button {
    width: 66rpx;
    height: 66rpx;
    position: absolute;
    top: 23rpx;
    right: 23rpx;
}

.banner .kefu {
    width: 66rpx;
    height: 66rpx;
    /* position: absolute;
    top: 11rpx;
