/*充值/电子洗护卡  */

.active {
    color: #5e95f4;
    border-bottom: 6rpx solid #5e95f4;
}

.main {
    width: 100%;
    background-color: #fff;
}

.main .swiper-tab {
    width: 100%;
    height: 74rpx;
    font-size: 28rpx;
    display: flex;
    justify-content: space-around;
    border-bottom: 1rpx solid #eef1f4;
}

.main .swiper-tab .swiper-tab-list {
    height: 71rpx;
    line-height: 71rpx;
}

/*账户充值  */

.recharge {
    width: 100%;
    padding: 18rpx 30rpx 40rpx;
    box-sizing: border-box;
    display: flex;
    flex-wrap: wrap;
}

.recharge .item {
    width: 214rpx;
    height: 116rpx;
    text-align: center;
    border: 2rpx solid #5e95f4;
    border-radius: 6rpx;
    margin-top: 22rpx;
    margin-right: 18rpx;
    position: relative;
}

.recharge .item .select {
    position: absolute;
    right: 0;
    bottom: 0;
    width: 39rpx;
    height: 41rpx;
}

.recharge .item:nth-child(3n) {
    margin-right: 0rpx;
}

.recharge .item .money {
    width: 100%;
    height: 50%;
    line-height: 68rpx;
    font-size: 32rpx;
    color: #5e95f4;
    display: flex;
    align-items: center;
    justify-content: center;
}

.recharge .item .text {
    width: 100%;
    height: 50%;
    line-height: 40rpx;
    font-size: 24rpx;
    color: #5e95f4;
}

.recharge .submit {
    width: 250rpx;
    height: 66rpx;
    margin: 40rpx auto 0;
    position: relative;
}

.recharge .submit image {
    width: 100%;
    height: 100%;
}

.recharge .submit text {
    font-size: 28rpx;
    color: #fff;
    position: absolute;
    left: 50%;
    top: 50%;
    margin-left: -28rpx;
    margin-top: -19rpx;
}

