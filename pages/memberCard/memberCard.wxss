/*洗护卡余额  */

.balance {
    width: 690rpx;
    background-color: #fff;
    margin: 18rpx auto 0;
    padding: 0 30rpx;
    box-sizing: border-box;
}

.balance .title {
    width: 100%;
    height: 76rpx;
    font-size: 26rpx;
    color: #282828;
    display: flex;
    align-items: center;
    justify-content: flex-start;
    border-bottom: 1rpx solid #eef1f4;
}

.balance .title text:first-child {
    display: inline-block;
    width: 8rpx;
    height: 24rpx;
    background-color: #5e95f4;
    margin-right: 14rpx;
}

.balance .content {
    width: 100%;
    height: 120rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.balance .content .left text:nth-child(1) {
    font-size: 38rpx;
    font-weight: 600;
    color: #5e95f4;
}

.balance .content .left text:nth-child(2) {
    font-size: 24rpx;
    font-weight: 600;
    color: #5e95f4;
}

.balance .content .left text:nth-child(3) {
    font-size: 24rpx;
    color: #282828;
    margin-left: 10rpx;
}

.balance .content .right {
    display: flex;
}

.balance .content .right view {
    width: 170rpx;
    height: 50rpx;
    font-size: 22rpx;
    color: #5e95f4;
    border: 1rpx solid #5e95f4;
    border-radius: 25rpx;
    margin-left: 26rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}

.balance .content .right view image {
    width: 11rpx;
    height: 18rpx;
    margin-left: 11rpx;
}

