page {
    width: 100%;
    height: 100%;
    background-color: #fff;
}

/*header  */

.none {
    height: 100%;
    overflow-y: hidden;
}

.header {
    width: 100%;
    height: 340rpx;
    position: relative;
}

.header .swiper {
    width: 100%;
    height: 340rpx;
}

.header .bg {
    width: 100%;
    height: 100%;
}

.header button {
    width: 66rpx;
    height: 66rpx;
    position: absolute;
    top: 24rpx;
    right: 24rpx;
}

.header .kefu {
    width: 66rpx;
    height: 66rpx;
    /* position: absolute;
    top: 12rpx;
    right: 24rpx; */
}

.header .tab {
    width: 710rpx;
    display: flex;
    flex-wrap: wrap;
    position: absolute;
    bottom: 0;
    left: 20rpx;
}

.header .tab .changeColor {
    width: 350rpx;
    height: 86rpx;
    text-align: center;
    line-height: 86rpx;
    font-size: 28rpx;
    font-weight: 600;
    background-color: #fff;
    border-radius: 10rpx 10rpx 0 0;
}

.header .tab .repair {
    width: 360rpx;
    height: 76rpx;
    font-size: 28rpx;
    color: #fff;
    text-align: center;
    line-height: 76rpx;
    background-color: rgba(0, 0, 0, 0.3);
    border-radius: 0rpx 10rpx 0rpx 0rpx;
    margin-top: 10rpx;
}

/*开始改色  */

.main {
    width: 702rpx;
    background-color: #fff;
    margin: 0 auto;
    padding: 29rpx 0rpx 0rpx;
    box-sizing: border-box;
    border-bottom-left-radius: 20rpx;
    border-bottom-right-radius: 20rpx;
    box-shadow: 0rpx 6rpx 10rpx 7rpx #f2f2f2;
}

.main .support {
    width: 100%;
    text-align: center;
}

.main .support image {
    width: 261rpx;
    height: 27rpx;
}

.main .part {
    width: 100%;
    display: flex;
    flex-wrap: wrap;
    padding: 0 21rpx;
    box-sizing: border-box;
    margin-top: 29rpx;
}

.main .part image {
    width: 220rpx;
    height: 94rpx;
}

.main .submit {
    width: 632rpx;
    height: 74rpx;
    margin: 30rpx auto 0;
    position: relative;
}

.main .submit image {
    width: 100%;
    height: 100%;
}

.main .submit text {
    font-size: 28rpx;
    color: #fff;
    position: absolute;
    top: 50%;
    left: 50%;
    margin-left: -56rpx;
    margin-top: -22rpx;
}

.main .know {
    width: 100%;
    height: 98rpx;
    display: flex;
    align-items: center;
    justify-content: flex-start;
    border-top: 1rpx solid #eef1f4;
    margin-top: 30rpx;
    padding: 0 21rpx;
    box-sizing: border-box;
}

.main .know image {
    width: 50rpx;
    height: 50rpx;
    margin-right: 25rpx;
}

.main .know view {
    font-size: 22rpx;
    color: #4b525b;
}

.main .know view text {
    font-weight: 600;
}

/* 服务流程 */

.flows {
    width: 100%;
    text-align: center;
    margin-top: 30rpx;
    padding-bottom: 160rpx;
    box-sizing: border-box;
}

.flows .title image {
    width: 203rpx;
    height: 25rpx;
}

.flows .step {
    width: 100%;
    margin-top: 30rpx;
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
}

.flows .item {
    width: 300rpx;
    height: 70rpx;
    text-align: center;
    line-height: 70rpx;
    font-size: 24rpx;
    color: #4b525b;
    box-shadow: 0px 0px 12px 1px rgba(0, 0, 0, 0.08);
    border-radius: 4px;
    margin-right: 48rpx;
    position: relative;
}

.flows .item:nth-child(2n) {
    margin-right: 0rpx;
}

.flows .item:nth-child(3) {
    margin-top: 20rpx;
}

.flows .item:last-child {
    margin-top: 20rpx;
}

.flows .item .lineRight {
    width: 46rpx;
    height: 20rpx;
    position: absolute;
    top: 50%;
    right: -46rpx;
    margin-top: -10rpx;
}

.flows .item .lineBottom {
    width: 20rpx;
    height: 46rpx;
    position: absolute;
    bottom: -46rpx;
    right: 14rpx;
}

.flows .item .lineLeft {
    width: 45rpx;
    height: 20rpx;
    position: absolute;
    top: 50%;
    right: -46rpx;
    margin-top: -10rpx;
}

