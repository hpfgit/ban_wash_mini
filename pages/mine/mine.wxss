/* page/details/details.wxss */

.page {
    width: 100%;
    text-align: center;
    margin-top: 147rpx;
}

.page image {
    width: 542rpx;
    height: 593rpx;
}

/*输入手机号  */

.input {
    width: 70%;
    height: 85rpx;
    display: flex;
    align-items: center;
    background-color: #f4f4f4;
    padding: 0 0 0 25rpx;
    font-size: 30rpx;
    border-radius: 20rpx;
    margin: 95rpx auto 40rpx;
}

.input .prefix {
    display: flex;
    align-items: center;
}

.input .prefix .sanjiao {
    font-size: 20rpx;
    margin-left: 10rpx;
    margin-right: 24rpx;
}

.input .number {
    border-left: 1px solid #282828;
}

.input .number input {
    margin-left: 24rpx;
}

/*BAN用户协议  */

.prototcl {
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 20rpx;
}

.prototcl checkbox {
    zoom: 60%;
}

.prototcl .notice {
    color: #5e94f5;
}

/*继续  */

.go {
    width: 540rpx;
    height: 84rpx;
    color: #fff;
    font-size: 30rpx;
    background-color: #5e94f5;
    margin-top: 90rpx;
    margin-bottom: 50rpx;
}

/*微信登录  */

.weChat {
    width: 420rpx;
    height: 84rpx;
    font-size: 28rpx;
    color: #52c657;
    background-color: transparent;
    border: 1px solid #52c657;
    border-radius: 50rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-top: 240rpx;
}

.weChat image {
    width: 44rpx;
    height: 36rpx;
    margin-right: 18rpx;
}

/* 获取手机号 */

.box {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background-color: rgba(0, 0, 0, 0.6);
    display: flex;
    justify-content: center;
    align-items: center;
}

.box .content {
    width: 560rpx;
    height: 564rpx;
    background-color: #fff;
    text-align: center;
    padding: 0 90rpx;
    box-sizing: border-box;
    border-radius: 12rpx;
}

.box .content .title {
    font-size: 34rpx;
    color: #2c2c2c;
    margin-top: 65rpx;
}

.box .content .text {
    text-align: left;
    font-size: 26rpx;
    color: #888;
    margin-top: 60rpx;
}

.box .content button {
    width: 100%;
    height: 90rpx;
    text-align: center;
    line-height: 90rpx;
    font-size: 30rpx;
    color: #fff;
    background-color: #19ab18;
    border-radius: 60rpx;
    margin-top: 85rpx;
}

.box .content .other {
    font-size: 22rpx;
    font-weight: 600;
    color: #5a80b6;
    margin-top: 60rpx;
    text-decoration: underline;
}
