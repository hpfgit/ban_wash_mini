image {
  width: 40rpx;
  height: 40rpx;
}
page {
  background: #eef1f4;
  font-size: 28rpx;
}
.top {
  background: #fff;
  border-top: 2rpx solid #eef1f4; 
  padding: 40rpx 24rpx;
  margin-bottom: 20rpx;
}
.top .code_box {
  display: flex;
  background: #f5f5f5;
  border-radius: 6rpx;
  align-items: center;
  margin-bottom: 30rpx;
}
.top .code_box input {
  padding: 20rpx;
  flex: 1;
}
.top .code_box image {
  width: 40rpx;
  height: 40rpx;
  padding: 20rpx;
}
.top .order_goods_num {
  display: flex;
  align-items: center;
}
.top .order_goods_num input {
  padding: 20rpx;
  flex: 1;
  background: #f5f5f5;
}
.top .order_goods_num .submit {
  width: 262rpx;
  font-size: 28rpx;
  color: #fff;
	height: 70rpx;
  line-height: 70rpx;
  text-align: center;
	background-image: linear-gradient(-90deg, 
		#7eabf1 0%, 
		#799bf5 55%, 
		#738af9 100%);
	background-blend-mode: normal, 
		normal;
	border-radius: 6rpx;
  margin-left: 40rpx;
}
/* 订单总数量 */
.all_order_num {
  background: #fff;
  padding: 20rpx 0;
  text-align: center;
  margin-bottom: 20rpx;
}
.all_order_num text {
  display: inline-block;
  padding: 23rpx 100rpx;
  border-radius: 35rpx;
  color: #5e95f4;
  background: #f5f5f5;
}
/* 订单列表 */
.list {
  background: #fff;
}
.list .item {
  display: flex;
  padding: 28rpx 24rpx;
  border-bottom: 2rpx solid #eef1f4;
}
.list .item:last-child {
  border: none;
}
.list .item .goods_images_box image {
  width: 140rpx;
  height: 140rpx;
  border-radius: 6rpx;
}
.order_info  {
  margin-left: 25rpx; 
}
.order_info .order_id, .order_info .order_num {
	font-size: 26rpx;
	line-height: 50rpx;
	color: #282828;
}