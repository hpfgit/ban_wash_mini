/* page/logistics/logistics.wxss */

page {
    background-color: #eef1f4;
}

.order {
    width: 100%;
    background-color: #fff;
}

.order image {
    width: 100%;
    height: 6rpx;
}

.order .order-info {
    padding: 40rpx 25rpx;
    box-sizing: border-box;
    font-size: 28rpx;
}

.order .order-info view:nth-child(2) {
    margin-top: 25rpx;
    margin-bottom: 25rpx;
}

.logistics {
    width: 100%;
    margin-top: 18rpx;
    padding: 10rpx 22rpx;
    box-sizing: border-box;
    background-color: #fff;
}

.logistics .item {
    display: flex;
    flex-grow: grow;
}

.logistics .item .round {
    border-left: 1rpx solid #eef1f4;
    border-right: 1rpx solid #eef1f4;
    position: relative;
}

.logistics .item .round::after {
    content: '';
    display: inline-block;
    width: 12rpx;
    height: 12rpx;
    margin-top: 45rpx;
    background-color: #d6d7d9;
    border-radius: 50%;
    position: absolute;
    left: -6rpx;
    top: 0rpx;
}

.problem {
    color: #5e95f4 !important;
}

