/* pages/orders/orders.wxss */

/*洗护订单  */

page {
    background-color: #eef1f4;
}

.page {
    width: 100%;
    padding-top: 18rpx;
    box-sizing: border-box;
}

/*订单列表  */

.items {
    width: 100%;
}

.items .item {
    margin-bottom: 18rpx;
    padding: 0 24rpx;
    box-sizing: border-box;
    background-color: #fff;
}

.items .item .top {
    width: 100%;
    height: 70rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
    border-bottom: 1rpx solid #eef1f4;
}

.items .item .top .number {
    width: 100%;
    font-size: 26rpx;
}

.items .item .top  .kefu {
    width: 50%;
    display: flex;
    align-items: center;
    justify-content: flex-end;
}

.items .item .top  .kefu text {
    font-size: 26rpx;
    margin-right: 10rpx;
}

.items .item .top  .kefu image {
    width: 30rpx;
    height: 26rpx;
}

.items .item .middle {
    padding: 23rpx 0;
    box-sizing: border-box;
    display: flex;
    justify-content: space-between;
    border-bottom: 1rpx solid #eef1f4;
}

.items .item .middle .left {
    width: 126rpx;
    height: 126rpx;
    border-radius: 6rpx;
}

.items .item .middle .left image {
    width: 100%;
    height: 100%;
    border-radius: 6rpx;
}

.items .item .middle .right {
    width: 549rpx;
    box-sizing: border-box;
}

.items .item .middle .right .M-top {
    width: 100%;
    display: flex;
    justify-content: space-between;
    margin-top: 8rpx;
}

.items .item .middle .right .M-top, title {
    font-size: 26rpx;
    color: #282828;
}

.items .item .middle .right .M-top .price {
    font-size: 30rpx;
    font-weight: 600;
    color: #282828;
}

.items .item .middle .right .M-top .price text {
    text-decoration: line-through;
    color: #989898;
    margin-left: 16rpx;
    font-size: 22rpx;
}

.items .item .middle .right .M-bottom {
    width: 100%;
    display: flex;
    flex-wrap: wrap;
    justify-content: flex-start;
    margin-top: 25rpx;
}

.items .item .middle .right .M-bottom view {
    font-size: 22rpx;
    color: #989898;
    padding: 4rpx 7rpx;
    box-sizing: border-box;
    border: 1rpx solid #989898;
    border-radius: 6rpx;
    margin-right: 5rpx;
    margin-bottom: 5rpx;
}

.items .item .bottom {
    width: 100%;
    height: 92rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.items .item .bottom .right {
    display: flex;
    justify-content: flex-end;
}

.items .item .bottom .right .gray {
    padding: 14rpx 24rpx;
    font-size: 24rpx;
    color: #656565;
    text-align: center;
    border: 1rpx solid #cdcdcd;
    border-radius: 4rpx;
    margin-left: 20rpx;
}

.items .item .bottom .right .blue {
    padding: 14rpx 24rpx;
    font-size: 24rpx;
    color: #fff;
    text-align: center;
    background-color: #5e94f5;
    border-radius: 4rpx;
}

.items .item .bottom .right .none {
    padding: 14rpx 24rpx;
    font-size: 24rpx;
    color: #656565;
    text-align: center;
    border-radius: 4rpx;
}

.no {
    width: 100%;
    text-align: center;
}

.no image {
    width: 440rpx;
    height: 560rpx;
}
